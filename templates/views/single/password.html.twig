{% extends "layouts/app.twig" %}

{% block content %}
    <div class="container mx-auto px-4 lg:px-0 lg:mt-6">
        <h2 style="margin: 2rem 0;">Deze pagina is met een wachtwoord afgeschermd.</h2>

        <form class="password-form" action="{{site.site_url}}/wp-login.php?action=postpass" method="post" style="margin-bottom: 1rem;">
            <label for="pwbox-{{post.ID}}" style="display: block; margin-bottom: 1rem;">Wachtwoord:</label>
            <input class="password-box" name="post_password" id="pwbox-{{post.ID}}" type="password" placeholder="Password" size="20" maxlength="20" style="border: 1px solid; border-radius: 4px; padding: .5rem;" />
            <input class="password-btn" type="submit" name="Submit" value="Invoeren" style="padding: .5rem; border-radius: 4px;" />
        </form>
    </div>
{% endblock %}
