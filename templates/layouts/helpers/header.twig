<header role="banner" class="header">
    <div class="container mx-auto flex px-4 lg:px-0">
        <div class="header-start">
            {% do action('werf8_pre_header_start') %}
            {{ include('partials/header/logo.html.twig') }}
            {% do action('werf8_post_header_start') %}
        </div>
        <div class="header-end">
            {% do action('werf8_pre_header_end') %}
            <button class="button is-white lg:hidden" onclick="document.querySelector('.nav-bar').classList.toggle('active')">
                <i class="fas fa-bars"></i>
            </button>
            {{ include('partials/header/navbar.html.twig') }}
            {% do action('werf8_post_header_end') %}
        </div>
    </div>
</header>
